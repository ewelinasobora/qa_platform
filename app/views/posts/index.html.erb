<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <p style="color: green"><%= notice %></p>

  <h1 class="mt-6 text-6xl font-bold text-center text-gray-800">Asked questions</h1>
  <div class="mt-12 space-y-8">
    <div class="border-2 border-gray-100 rounded-lg dark:border-gray-700">
      <% @posts.each do |post| %>
        <button class="bg-indigo-400 flex items-center justify-between w-full p-8">
            <h1 class="font-bold dark:text-black text-xl"><%= link_to post.title, post_path(post) %></h1>
         </button>

          <hr class="border-gray-200 dark:border-gray-700">

          <p class="font-bold p-8 text-sm text-gray-500 dark:text-black">
            <%= post.body %>
          </p>
      <% end %>
    </div>
    </div>
  </div>
</div>
