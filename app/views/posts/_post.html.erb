<div id="<%= dom_id post %>">
  <div class="mt-4 rounded overflow-hidden shadow-lg">
    <div class="px-8 py-4">
      <h2 class="text-4xl"><%= link_to post.title, post_path %></h2>
      <% unless post.user == current_user %>
        <h4 class="mg-2 underline decoration-1">posted by: <%= link_to post.user.full_name, user_path(post.user) %></h4>
      <% end %>
      <h6 class="text-sm"><%= pluralize(post.views, "view") %></h6>
      <div class="mt-6"><%= post.body %></div>
    </div>
  </div>
</div>
