<div class="container sm:mx-auto px-20 py-10 -mt-8", id="<%= dom_id comment %>">
	<div class="relative grid grid-cols-1 p-4 border rounded-lg bg-white shadow-lg">
		<div class="relative flex gap-4">
			<div class="relative rounded-lg -top-8 -mb-4 bg-white border h-20 w-20">
				<%= image_tag(comment.user.avatar_url) %>
			</div>
			<div class="flex flex-col justify-between">
				<p>Commented by:</p>
				<div class="flex flex-row justify-between">
					<p class="relative text-lg whitespace-nowrap truncate overflow-hidden"><%= link_to comment.user.full_name, user_path(comment.user) %></p>
				</div>
				<p class="text-gray-400 text-sm"><%= comment.created_at %></p>
			</div>
		</div>
		<p class="text-gray-500"><%= comment.body %></p>
	</div>
</div>
